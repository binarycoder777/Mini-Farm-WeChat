<view>
  <van-cell-group>
    <van-field value="{{ username }}" required clearable label="收货人" placeholder="请输入用户名" />
    <van-field value="{{ phone }}" required clearable label="手机号码" placeholder="请填写收货人手机号" />
    <van-field value="{{ zone }}" required clearable label="所在地区" placeholder="省市区县、乡镇等" />
    <van-field value="{{ detail }}" required clearable label="详细地址" placeholder="街道、楼牌号等" />
  </van-cell-group>
</view>

<view id="save-address">
  <van-button type="primary" color="red" size="normal" bind:click="saveAddress">保存地址</van-button>
</view>